<?xml version="1.0" encoding="UTF-8"?>
<MixxxControllerPreset schemaVersion="1" mixxxVersion="2.6+">
    <info>
        <name>Denon DN-SC2000 FV</name>
        <author>Floris Vedder</author>
        <description>Denon DN-SC2000 mapping based on ComponentsJS with midiIn and midiOut mapping. Without control configuration in the xml.</description>
    </info>
    <controller id="AMXFV">
        <scriptfiles>
            <file filename="midi-components-0-FV.js" />
            <file filename="Denon-SC2000-scripts.js" functionprefix="DnSc2000" />
        </scriptfiles>
        <outputs/>
    </controller>
    <settings>
        <option variable="midiChannel" type="enum" label="Midi Channel">
            <value label="1 and 2" default="true">0</value>
            <value label="3 and 4">2</value>
            <value label="5 and 6">4</value>
            <value label="7 and 8">6</value>
            <description>
                Match this with the midi channel selected on the controller.
                Instructions how to do that are on the rear of the controller.
            </description>
        </option>
        <group label="Deck assignement">
            <option variable="blueDeck" type="integer" min="1" default="1" max="4" label="Deck A: Blue"/>
            <option variable="redDeck" type="integer" min="1" default="2" max="4" label="Deck B: Red"/>
        </group>
        <group label="FX assignement">
            <option variable="blueDeckFx1" type="integer" min="1" default="1" max="4" label="Deck A: Blue [FX1]"/>
            <option variable="blueDeckFx2" type="integer" min="1" default="2" max="4" label="Deck A: Blue [FX2]"/>
            <option variable="redDeckFx1" type="integer" min="1" default="1" max="4" label="Deck B: Red [FX1]"/>
            <option variable="redDeckFx2" type="integer" min="1" default="2" max="4" label="Deck B: Red [FX2]"/>
        </group>
    </settings>
</MixxxControllerPreset>